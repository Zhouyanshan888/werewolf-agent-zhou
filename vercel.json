{
  "builds": [
    {
      "src": "index.py",  // 关键：改为实际功能入口 index.py
      "use": "@vercel/python",
      "config": {
        "runtime": "python-3.11.9",  // 与 runtime.txt 版本一致
        "maxLambdaSize": "25mb"  // 解决依赖包体积超限问题
      }
    }
  ],
  "functions": {
    "index.py": {  // 对应入口文件，设置超时时间（游戏运行可能较久）
      "runtime": "python-3.11.9",
      "maxDuration": 300  // Vercel 免费版最大超时 300 秒（5分钟），足够运行3局游戏
    }
  },
  "routes": [
    {
      "src": "/(.*)",  // 所有请求转发到 index.py
      "dest": "index.py"
    }
  ]
}
